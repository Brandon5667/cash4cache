{{> banner}}
<form class="search-form" method="post" action="/search">
<input class="input is-primary" id="search-form" name="keyword" type="text" placeholder="Primary input">
<div class="buttons">
  <button class="button is-primary" id="search-button">Search</button>
</div>
</form>
{{#each items as |item|}}
<div class="card">
  <header class="card-header">
    <p class="card-header-title">
      Name: {{item.name}}    Price: ${{item.ourPrice}}    MSRP: ${{item.MSRP}}
    </p>
    <button class="card-header-icon" aria-label="more options">
      <span class="icon">
        <i class="fas fa-angle-down" aria-hidden="true"></i>
      </span>
      <button class="button is-success" id="contact-seller">Contact Seller</button>
    </button>
  </header>
  <div class="card-content">
    <div class="content">
      Description: {{item.description}}
      Email: {{item.user.email}}
    </div>
  </div>
