

<section class="section">
  <div class="container">
    <h2 class="title is-4">CPUs</h2>
    <div class="columns is-multiline">
      {{#each cpuData}}
        <div class="column is-4">
          <div class="card">
            <div class="card-header">
              <p class="card-header-title">{{this.name}}</p>
            </div>
            <div class="card-content">
              <div class="content">
                <p class="is-size-5">Brand: {{this.brand}}</p>
                <p class="is-size-5">Cores: {{this.cores}}</p>
                <p class="is-size-5">Threads: {{this.threads}}</p>
                <p class="is-size-5">MSRP: ${{this.MSRP}}</p>
                <p class="is-size-5">Our Price: ${{this.ourPrice}}</p>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>


