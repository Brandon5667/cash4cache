<div class="container is-flex is-justify-content-center is-align-items-center">
    <h2>Login</h2>

    <form class="form login-form">
        <div class="form-group">
            <label for="email-login">Email:</label>
            <input class="form-input" type="text" id="email-login" />
        </div>
        <div class="form-group">
            <label for="password-login">Password:</label>
            <input class="form-input" type="password" id="password-login" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Login</button>
        </div>
    </form>


    <h2>Create Account</h2>

    <form class="form create-form">
        <div class="form-group">
            <label for="name-create">Name:</label>
            <input class="form-input" type="text" id="name-create" />
        </div>
        <div class="form-group">
            <label for="email-create">Email:</label>
            <input class="form-input" type="text" id="email-create" />
        </div>
        <div class="form-group">
            <label for="password-create">Password:</label>
            <input class="form-input" type="password" id="password-create" />
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Create Account</button>
        </div>
    </form>
</div>